
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/containers_design"
            android:id="@+id/idTitleBar">


                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:elevation="5dp"
                    android:alpha=".6"
                    android:id="@+id/idDark"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                   android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:id="@+id/idDate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora"
                        android:id="@+id/idHour"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reply"
                        android:id="@+id/idReturn"/>

               </LinearLayout>

                <ImageButton
                    android:src="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/main_sections"
                    android:id="@+id/idDashboard"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:background="@drawable/containers_design"
            android:id="@+id/idTimeLine"
            app:layout_constraintTop_toBottomOf="@id/idTitleBar">

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:elevation="5dp"
                android:alpha=".6"
                android:id="@+id/idDark"/>-->

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#AC2516"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:elevation="1dp"/>

        </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.85"
        android:background="@drawable/containers_design"
        android:id="@+id/idOptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idTimeLine">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.75"
            android:layout_height="50dp"
            android:background="@drawable/containers_design"
            android:id="@+id/idPlaneOptions"
            app:layout_constraintTop_toBottomOf="@id/idTimeLine"
            app:layout_constraintLeft_toRightOf="@+id/idOptions">

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:elevation="5dp"
                android:alpha=".6"
                android:id="@+id/idDark"/>-->
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="Guardado"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/idAccept"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"/>


            <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/promotions_container"
                    app:layout_constraintRight_toLeftOf="@+id/newFloor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                     <Spinner
                        android:id="@+id/floorName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:prompt="@string/select_floor"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lineSpinner" />

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Agregar Piso"
                android:id="@+id/newFloor"
                app:layout_constraintRight_toLeftOf="@+id/idModify"
                android:background="@drawable/delete_buttons"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Agregar Mesas"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/delete_buttons"
                android:id="@+id/idModify"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.75"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.78"
                android:id="@+id/container"
                android:background="#F6F7FB"
                app:layout_constraintTop_toBottomOf="@+id/idPlaneOptions"
                app:layout_constraintLeft_toRightOf="@+id/idOptions">

         </RelativeLayout>

</android.support.constraint.ConstraintLayout>