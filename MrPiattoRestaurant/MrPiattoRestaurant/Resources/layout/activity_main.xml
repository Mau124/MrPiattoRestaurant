
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/containers_design"
            android:id="@+id/idTitleBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                   android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:id="@+id/idDate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora"
                        android:id="@+id/idHour"/>

               </LinearLayout>

                <ImageButton
                    android:src="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/main_sections"
                    android:id="@+id/idDashboard"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:background="@drawable/containers_design"
            android:id="@+id/idTimeLine"
            app:layout_constraintTop_toBottomOf="@id/idTitleBar">

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#AC2516"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:elevation="1dp"/>

        </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.85"
        android:background="@drawable/containers_design"
        android:id="@+id/idOptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idTimeLine">

        
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.75"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.07"
            android:background="@drawable/containers_design"
            android:id="@+id/idPlaneOptions"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/idTimeLine"
            app:layout_constraintLeft_toRightOf="@+id/idOptions">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:prompt="@string/select_floor"
                android:id="@+id/floorName"
                app:layout_constraintRight_toLeftOf="@+id/newFloor"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Agregar Piso"
                android:id="@+id/newFloor"
                app:layout_constraintRight_toLeftOf="@+id/idModify"
                android:background="@drawable/delete_buttons"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Modificar"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/delete_buttons"
                android:id="@+id/idModify"
                android:textColor="#ffffff"
                android:textAllCaps="false"/>

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.75"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.78"
                android:id="@+id/container"
                android:background="#F6F7FB"
                app:layout_constraintTop_toBottomOf="@+id/idPlaneOptions"
                app:layout_constraintLeft_toRightOf="@+id/idOptions">

         </RelativeLayout>

</android.support.constraint.ConstraintLayout>