
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_height="match_parent"
        android:id="@+id/idOptions"
        android:background="@drawable/dashboard_main_design"
        android:paddingTop="120dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idAboutMe"
            android:src="@drawable/userdashboardselected"
            android:background="@drawable/dashboard_selected_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idPolicies"
            app:layout_constraintTop_toBottomOf="@+id/idAboutMe"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/policies"
            android:padding="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idStatistics"
            app:layout_constraintTop_toBottomOf="@+id/idPolicies"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/report"
            android:padding="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idPhotosGallery"
            app:layout_constraintTop_toBottomOf="@+id/idStatistics"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/art"
            android:padding="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/idPromotions"
            app:layout_constraintBottom_toTopOf="@+id/idLogout"
            app:layout_constraintRight_toRightOf="@+id/idLogout"
            android:src="@drawable/bullhorn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/statistics_spinner_background"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/idLogout"
            app:layout_constraintBottom_toTopOf="@+id/idDelete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/logout"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/statistics_spinner_background"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/idDelete"
            app:layout_constraintBottom_toBottomOf="@+id/idOptions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/trash"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/statistics_spinner_background"
            android:layout_marginBottom="20dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="match_parent"
        android:id="@+id/idContainer"
        app:layout_constraintLeft_toRightOf="@id/idOptions">

        <FrameLayout
            android:id="@+id/idContent_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_above="@+id/bottom_navigation"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>