<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:id="@+id/idTitle"
        android:background="@drawable/containers_design">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar Piso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/idCancel"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/close"
            android:layout_marginTop="10dp"/>

        </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/idTitle"
        android:id="@+id/idSquareTables"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idCirculares"
                android:background="@drawable/subtitles_design"
                android:orientation="vertical"
                android:paddingBottom="10dp">
            
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesas cuadradas "
                   android:layout_margin="10dp"/>

                <GridView 
                    android:id="@+id/idTablesGrid"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:columnWidth="90dp"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDesign"
                android:background="@drawable/subtitles_design"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/idCirculares">
            
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesas circulares "
                    android:layout_margin="10dp"/>

                <GridView 
                    android:id="@+id/idCircleTablesGrid"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:columnWidth="90dp"
                    android:numColumns="4"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/containers_design"
        android:paddingTop="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        app:layout_constraintBottom_toTopOf="@+id/idDeleteButton"
        android:background="@drawable/save_buttons"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:id="@+id/idSaveButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/idDeleteButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/delete_buttons"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>