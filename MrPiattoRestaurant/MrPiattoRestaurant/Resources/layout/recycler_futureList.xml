
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subtitles_design">

    <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             app:layout_constraintHeight_percent="0.1"
             android:orientation="horizontal"
             android:gravity="center"
             android:id="@+id/idMenu"
             app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/03/20"
                android:id="@+id/idInterval1"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_statistics_pickers"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/idLine"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/03/20"
                android:id="@+id/idInterval2"
                android:layout_margin="10dp"
                android:background="@drawable/style_statistics_pickers"
                android:padding="10dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E2EA"
        android:layout_marginBottom="15dp"
        android:id="@+id/idDiv"
        app:layout_constraintTop_toBottomOf="@+id/idMenu"/>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.9"
        android:id="@+id/idRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/idDiv"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservacion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/idButton"/>

</android.support.constraint.ConstraintLayout>