<android.support.constraint.ConstraintLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galeria"
            android:id="@+id/idTitle"
            app:layout_constraintLeft_toLeftOf="@+id/idRecyclerView"
            app:layout_constraintBottom_toBottomOf="@+id/idItemDiv"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"/>
    
        <View
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.95"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            app:layout_constraintTop_toBottomOf="@+id/idTitle"
            android:id="@+id/idItemDiv"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:background="@drawable/statistics_spinner_background"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:padding="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/idButton"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.95"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.85"
            android:id="@+id/idRecyclerView"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/idItemDiv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout >