
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:id="@+id/idTitle"
        android:background="@drawable/containers_design">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propiedades"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/idDismiss"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/close"
            android:layout_marginTop="10dp"/>

        </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/idTitle"
        android:id="@+id/idGeneral"
        android:padding="10dp">
            
            <LinearLayout
                android:id="@+id/idNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:id="@+id/idName"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#15142F"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp" 
                    android:layout_marginTop="10dp"
                    android:id="@+id/idTableName"
                    android:layout_alignParentTop="true"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/generic"/>

            </LinearLayout>
      
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asientos" 
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idNameContainer"
                android:id="@+id/idSeats"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#15142F"/>

            <SeekBar
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.8"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/idTableSeats"
                app:layout_constraintBottom_toBottomOf="@+id/idTableSeats"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/idSeekBar"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="5" 
                app:layout_constraintTop_toBottomOf="@+id/idSeats"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/idTableSeats"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:gravity="center"
                android:background="@drawable/generic"/>

        
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9C9CB1"
                app:layout_constraintTop_toBottomOf="@+id/idTableSeats"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/idDiv1"/>

        </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idGeneral"
        android:id="@+id/idReservations"
        android:padding="10dp"
        android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservaciones "
                android:layout_marginBottom="10dp"
                android:textColor="#15142F"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idRecyclerView"/>

        </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/containers_design"
        android:paddingTop="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Mesa"
        android:id="@+id/idDeleteTable"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/delete_buttons"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>