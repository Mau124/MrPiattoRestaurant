<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subtitles_design"
    android:padding="15dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/user"
        android:id="@+id/idImageUser"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idPersonName"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/idImageUser"
        app:layout_constraintTop_toTopOf="@+id/idImageUser"
        app:layout_constraintBottom_toBottomOf="@+id/idImageUser"
        android:text="Mauricio Andres Flores Perez"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/idPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/idTableInfo"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/itemTable"
            android:id="@+id/idImageTable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idtableName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Mesa 1"/>

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/time"
        android:id="@+id/idImageTime"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTableInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idDate"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/idImageTime"
        app:layout_constraintTop_toTopOf="@+id/idImageTime"
        app:layout_constraintBottom_toBottomOf="@+id/idImageTime"
        android:text="12/04/20 3:30"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/communications"
        android:id="@+id/idImagePhone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idPhone"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/idImagePhone"
        app:layout_constraintTop_toTopOf="@+id/idImagePhone"
        app:layout_constraintBottom_toBottomOf="@+id/idImagePhone"
        android:text="3316545498"/>

    <TextView
        android:id="@+id/idViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>