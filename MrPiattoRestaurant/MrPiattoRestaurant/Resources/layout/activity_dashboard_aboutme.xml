
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.65"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@drawable/banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/idData"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/idPolitics"
        android:id="@+id/idBanner"
        android:paddingRight="70dp"
        android:paddingLeft="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buenos días,"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:id="@+id/idGreet"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a tu tablero"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:id="@+id/idWelcome"
            app:layout_constraintTop_toBottomOf="@+id/idGreet"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/idWelcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/res"/>

        </android.support.constraint.ConstraintLayout>

    <!--<ImageView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        android:src="@drawable/res"
        android:id="@+id/idMainImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/idPolitics"
        app:layout_constraintRight_toLeftOf="@+id/idData"
        android:padding="0dp"/>-->

    <LinearLayout
          android:layout_width="0dp"
          app:layout_constraintWidth_percent="0.3"
          android:layout_height="match_parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:orientation="vertical"
          android:id="@+id/idData"
          android:padding="30dp"
          android:background="#FBFBFD"
          android:gravity="center">

        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos del restaurante"
            android:textColor="#528FAB"
            android:textSize="20dp"
           android:layout_margin="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal"
             android:background="@drawable/generic"
             android:gravity="center"
             android:layout_margin="5dp">

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textColor="#969DA7"/>

            
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Restaurante de Don Perro"
                android:textColor="#576171"
                android:textSize="15dp"
                android:id="@+id/idRestaurantName"/>

        </LinearLayout>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal"
             android:background="@drawable/generic"
             android:gravity="center"
             android:layout_margin="5dp">

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: "
                android:textColor="#969DA7"/>

            
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="donperro12@gmail.com"
                android:textColor="#576171"
                android:textSize="15dp"
                android:id="@+id/idRestaurantMail"/>

        </LinearLayout>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal"
             android:background="@drawable/generic"
             android:gravity="center"
             android:layout_margin="5dp"
             android:textColor="#969DA7">

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion: "
                android:textColor="#969DA7"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Especializados en alta cocina francesa"
            android:textColor="#576171"
            android:background="@drawable/generic"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:gravity="top"
            android:id="@+id/idRestaurantDesc"/>

       <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:background="@drawable/delete_buttons"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/idModifyRes"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:background="@drawable/save_buttons"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/idAcceptRes"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar Contraseña"
            android:background="@drawable/delete_buttons"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/idModifyPass"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar Horarios"
            android:background="@drawable/delete_buttons"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/idModifyHours"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:background="@drawable/save_buttons"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/idPolitics"
        app:layout_constraintRight_toLeftOf="@+id/idMod"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:id="@+id/idAccept"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:background="@drawable/delete_buttons"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/idPolitics"
        app:layout_constraintRight_toRightOf="@+id/idPolitics"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:id="@+id/idMod"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:background="@drawable/delete_buttons"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/idWaiters"
        app:layout_constraintRight_toRightOf="@+id/idWaiters"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:id="@+id/idAddWaiter"/>

    <LinearLayout
          android:layout_width="0dp"
          app:layout_constraintWidth_percent="0.4"
          android:layout_height="0dp"
          app:layout_constraintHeight_percent="0.6"
          app:layout_constraintTop_toBottomOf="@+id/idBanner"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="@+id/idBanner"
          android:orientation="vertical"
          android:background="@drawable/aboutme_containers"
          android:padding="20dp"
          android:id="@+id/idPolitics"
          android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Politicas"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo máximo para generar reservación: "
                android:textColor="#15142F"
                android:layout_marginRight="5dp"/>

            
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textSize="15dp"
                android:textColor="#9C9CB1"
                android:layout_marginRight="5dp"
                android:backgroundTint="#ACACAC"
                android:id="@+id/idMaxRes"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/idSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:prompt="@string/periods_prompt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo mínimo para generar reservación: "
                android:textColor="#15142F"
                android:layout_marginRight="8dp"/>

            
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textSize="15dp"
                android:textColor="#9C9CB1"
                android:layout_marginRight="5dp"
                android:backgroundTint="#ACACAC"
                android:id="@+id/idMinRes"
                android:inputType="number"/> 

            <Spinner
                android:id="@+id/idSpinner2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:prompt="@string/periods_prompt"/>

        </LinearLayout>
           
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo máximo de llegada: "
                android:textColor="#15142F"
                android:layout_marginRight="95dp"/>

            
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="15"
                android:textSize="15dp"
                android:textColor="#9C9CB1"
                android:backgroundTint="#ACACAC"
                android:layout_marginRight="5dp"
                android:id="@+id/idMaxArrive"
                android:inputType="number"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/idSpinner3"
                android:prompt="@string/periods_prompt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo mínimo para poder modificar reservación: "
                android:textColor="#15142F"
                android:layout_marginRight="5dp"/>

            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0s / 1d / 0h"
                android:textSize="15dp"
                android:textColor="#9C9CB1"
                android:backgroundTint="#ACACAC"
                android:id="@+id/idMinMod"
                android:inputType="number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de penalización: "
                android:textColor="#15142F"
                android:layout_marginRight="50dp"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/idSwitch1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permanente"
                android:textColor="#9C9CB1"
                android:id="@+id/idStrikeType"
            android:layout_marginRight="13dp"/>

            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textSize="15dp"
                android:textColor="#9C9CB1"
                android:layout_marginRight="5dp"
                android:backgroundTint="#ACACAC"
                android:id="@+id/idStrikeTime"
                android:inputType="number"/> 

            <Spinner
                android:id="@+id/idSpinner4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:prompt="@string/periods_prompt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E2EA"
            android:layout_marginBottom="5dp"/>
            
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="5dp">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar strike sobre usuario: "
                android:textColor="#15142F"/>

            
            <Switch
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/idSwitch2"
                OnColor="Orange"
                ThumbColor="Green"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
          android:layout_width="0dp"
          app:layout_constraintWidth_percent="0.23"
          android:layout_height="0dp"
          app:layout_constraintHeight_percent="0.6"
          app:layout_constraintTop_toBottomOf="@+id/idBanner"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="@+id/idBanner"
          android:orientation="vertical"
          android:background="@drawable/aboutme_containers"
          android:padding="20dp"
          android:id="@+id/idWaiters"
          android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meseros"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/idRecyclerView"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>